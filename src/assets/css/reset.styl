$color-1 = #eef1f6
$color-2 = #337ab7
$color-3 = #20a0ff
$color-4 = rgba(66,185,131,0.1)
$color-5 = #42b983
$color-6 = #20b6f9
$color-7 = #2178f1
$color-8 = #fff
$color-9 = #d0d0d0
$color-10 = rgba(0,0,0,.1)
$color-11 = #e2ecf6
$color-12 = #3582d0
$color-13 = #666
$color-14 = #f3f7fa
$color-15 = #7eaad7
$color-16 = #c0c4cc

@charset "UTF-8"

body
	height 100%
	osx-font-smoothing grayscale
	font-smoothing antialiased
	text-rendering optimizeLegibility
	font-family Helvetica Neue,Helvetica,PingFang SC,Hiragino Sans GB,Microsoft YaHei,Arial,sans-serif

label
	font-weight 700

html
	height 100%
	box-sizing border-box

#app
	height 100%

*
*:before
*:after
	box-sizing inherit

.no-padding
	padding 0px!important

.padding-content
	padding 4px 0

a:focus
a:active
	outline none

a
a:focus
a:hover
	cursor pointer
	color inherit
	text-decoration none

div
	&:focus
		outline none

.fr
	float right

.fl
	float left

.pr-5
	padding-right 5px

.pl-5
	padding-left 5px

.block
	display block

.pointer
	cursor pointer

.inlineBlock
	display block

.clearfix
	&:after
		visibility hidden
		display block
		font-size 0
		content " "
		clear both
		height 0
code
	background $color-1
	padding 15px 16px
	margin-bottom 20px
	display block
	line-height 36px
	font-size 15px
	font-family "Source Sans Pro","Helvetica Neue",Arial,sans-serif
	a
		color $color-2
		cursor pointer
		&:hover
			color $color-3
.warn-content
	background $color-4
	border-radius 2px
	padding 16px
	padding 1rem
	line-height 1.6rem
	word-spacing .05rem
	a
		color $color-5
		font-weight 600
.app-container
	padding 20px
.components-container
	margin 30px 50px
	position relative
.pagination-container
	margin-top 30px
.text-center
	text-align center
.sub-navbar
	height 50px
	line-height 50px
	position relative
	width 100%
	text-align right
	padding-right 20px
	transition 600ms ease position
	background linear-gradient(90deg,$color-6 0%,$color-6 0%,$color-7 100%,$color-7 100%)
	.subtitle
		font-size 20px
		color $color-8
	&.draft
		background $color-9
	&.deleted
		background $color-9
.link-type
.link-type:focus
	color $color-2
	cursor pointer
.link-type:hover
.link-type:focus:hover
	color $color-3
.filter-container
	padding-bottom 10px
	.filter-item
		display inline-block
		vertical-align middle
		margin-bottom 10px
.multiselect
	line-height 16px
.multiselect--active
	z-index 1000!important
.main-content
	padding 20px
	.tableControl
		margin-bottom 10px
	.pagination
		margin-top 10px
		text-align center
.F-table
	.el-button--mini
		padding 3px 6px
	.el-button
		+.el-button
			margin-left 5px
.fl-card
	padding 10px
	background $color-8
	box-shadow 0 2px 12px 0 $color-10

	.header
		background $color-11
		height 50px
		line-height 50px
		padding 0 15px
		color $color-12
		position relative
		margin-bottom 20px

.fl-table
	background $color-11
	border-spacing 1px
	width 100%
	margin-bottom 10px
	font-size 14px

	caption
		height 40px
		line-height 40px
		text-align left
		background $color-11
		color $color-12
		font-weight bold
		padding 0 15px

	.labels
		color $color-12

.fl-table th
.fl-table td
	background $color-8
	padding 6px 10px
	height 36px
	line-height 24px
	color $color-13

.fl-table th
.fl-table .total td
	background $color-14
	color $color-15

input::-webkit-input-placeholder
	color $color-16

input::-moz-placeholder
	color $color-16

input
	&:-moz-placeholder
		color $color-16

	&:-ms-input-placeholder
		color $color-16

	&:-webkit-autofill
		animation autofill-fix 1s infinite
.overflow-ellipsis-simple
	overflow hidden
	text-overflow ellipsis
	white-space nowrap

::-webkit-scrollbar {
    width: 8px;
    /*滚动条宽度*/
    height: 8px;
    /*滚动条高度*/
}


/*定义滚动条轨道 内阴影+圆角*/

::-webkit-scrollbar-track {
    background-color: #f0f0f0;
    /*滚动条的背景颜色*/
}


/*定义滑块 内阴影+圆角*/

::-webkit-scrollbar-thumb {
    border-radius: 4px;
    background-color: #ddd;
    /*滚动条的背景颜色*/
}